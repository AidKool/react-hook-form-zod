{
	"printWidth": 100,
	"tabWidth": 2,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "all",
	"bracketSpacing": true,
	"jsxBracketSameLine": false,
	"arrowParens": "always",
	"proseWrap": "always",

	"plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"],

	"importOrder": ["^[react]", "^@(?!/)", "^@/", "^[./]"],
	"importOrderSeparation": false,
	"importOrderSortSpecifiers": true
}
